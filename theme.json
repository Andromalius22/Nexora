{
    "@default_progress_bar": {
        "colours":
        {
            "filled_bar": "#3399FF",
            "unfilled_bar": "#222222"
        },
        "misc":
        {
            "shape": "rounded_rectangle",
            "shape_corner_radius" : "13"
        }
      },
    "window": {
        "colours":
        {
            "dark_bg":"#1E1E2F"
        },
        "misc": 
        {
            "border_width": 0,
            "shape": "rounded_rectangle",
            "shape_corner_radius" : "13",
            "shadow_width": 10,
            "title_bar_height": 30,
            "title_bar_background_color": "#2B2B3C"
        }
    },
    "#tile_info_panel": {
        "colours":
        {
            "dark_bg": "#000000",
            "normal_border": "#FFFF00"
        },
        "misc":
        {
            "shape":"rounded_rectangle",
            "shape_corner_radius":"13",
            "border_width":"4"
        }
    },
    "#red_text": {
        "colours":
        {
            "normal_text":"#FF0000"
        }
    },
    "#green_text": {
        "colours": 
        {
            "normal_text":"rgb(100, 255, 100)"
        }
    },
    "@white_text": {
        "colours": 
        {
            "normal_text":"#FFFFFF"
        }
    },
    "@yellow_text": {
        "colours": 
        {
            "normal_text": "#FFA500"
        }
    },
    "@food_bar": {
        "colours": {
            "unfilled_bar": "#444444"
        },
        "misc":
        {
            "shape": "rounded_rectangle",
            "shape_corner_radius" : "13"
        }
    },
    "#internal_bar": {
        "inherits": "@food_bar",
        "colours": {
            "filled_bar": "#00AA00"
        }
    },
    "#export_bar": {
        "inherits": "@food_bar",
        "colours": {
            "filled_bar": "#CC3333"
        }
    },
    "#import_bar": {
        "inherits": "@food_bar",
        "colours": {
            "filled_bar": "#FFD700"
        }
    },
    "@small_font_label": {
        "font":
        {
            "name": "LiberationMono",
            "size": "10",
            "regular_path": "assets/fonts/LiberationMono-Regular.ttf"
        },
        "misc":
        {
            "text_horiz_alignment": "left",
            "text_vert_alignment": "center"
        } 
    },
    "@left_label": {
        "misc": 
        {
            "text_horiz_alignment":"left"
        }
    },
    "#in_game_panel_mother": {
        "colours": 
        {
            "dark_bg":"#FFFFFF00"
        }
    },
    "#spec_window":{
        "misc":
        {
            "shape":"rounded_rectangle",
            "shape_corner_radius":"13",
            "enable_title_bar":"0"
        }
    },
    "@research_button":{
        "colours": 
        {
            "hovered_border":"rgb(255, 255, 0)"
        },
        "misc":
        {
            "shape":"rounded_rectangle"
        }
    },
    "#overview_manager_button":{
        "colours": 
        {
            "hovered_border":"rgb(255, 255, 0)"
        }
    },
    "#star_system_overview_window":{
        "misc":
        {
            "enable_title_bar":"0"
        }
    }

  }
  